<div class="modal" id="deleteModal" tabindex="2" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteModalLabel">confirmation</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>are you sure you want to delete this topic?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">cancel</button>
        <a class="btn btn-danger mt-1" asp-controller="Topics" asp-action="Delete" asp-route-id="@Model.Id">delete</a>
      </div>
    </div>
  </div>
</div>


<div class="modal" id="usersModal" tabindex="2" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteModalLabel">users</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        @foreach(var user in ViewBag.TopicUsers){
            var user_vote = "hasn't voted yet";
            @foreach(var vote in ViewBag.TopicVotes)
            {
                if (@vote.UserId == @user.Id){
                    if (@vote.Choice)
                    {
                        user_vote = "voted yes";
                    }
                    else
                    {
                        user_vote = "voted no";
                    }
                }
            }
            <p>@user.Name <strong>@user_vote</strong></p>
        }
      </div>
@*      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
      </div>*@
    </div>
  </div>
</div>
